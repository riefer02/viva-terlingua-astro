---
import { Card, CardContent, CardHeader } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Download } from 'lucide-react';

interface Props {
  photographer: string;
  imageUrl: string;
  downloadUrl: string;
}

const { photographer, imageUrl, downloadUrl } = Astro.props;
---

<Card className="mb-8">
  <CardHeader className="flex-row justify-between items-center space-y-0 pb-4">
    <h3 class="text-xl font-semibold tracking-tight">{photographer}</h3>
    <Button variant="outline" size="icon" asChild>
      <a href={downloadUrl} download>
        <Download className="h-4 w-4" />
        <span class="sr-only">Download image</span>
      </a>
    </Button>
  </CardHeader>
  <CardContent>
    <div class="overflow-hidden rounded-lg">
      <img
        src={imageUrl}
        alt={`2022 Collage by photographer ${photographer}`}
        class="w-full h-auto"
      />
    </div>
  </CardContent>
</Card>
