---
import type { Musician } from '@/types/strapi';
import BaseCard from '../BaseCard.astro';
import { getStrapiImageUrl } from '@/utils/image';

interface Props {
  musician: Musician;
  className?: string;
}

const { musician, className } = Astro.props;
const imageUrl = getStrapiImageUrl(musician.squareImage);
---

<BaseCard
  title={musician.name || ''}
  description={musician.description || ''}
  imageUrl={imageUrl}
  link={`/musicians/${musician.slug}`}
  viewText="View Musician"
  className={className}
/>
