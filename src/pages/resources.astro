---
import Layout from '@/layouts/Layout.astro';
import ResourcesGrid from '@/components/Resources.astro';

// SEO configuration
const seoConfig = {
  title:
    'Resources | Original Terlingua International Championship Chili Cook-off',
  description:
    'Access our collection of helpful resources and documents for the Original Terlingua International Championship Chili Cook-off. Find important forms, guidelines, and information to help you participate in and enjoy our events.',
};
---

<Layout {...seoConfig}>
  <main class="bg-background">
    <section class="w-full py-12 md:py-24 bg-muted/50">
      <div class="container px-4 md:px-6 mx-auto">
        <div
          class="flex flex-col items-center justify-center space-y-4 text-center mb-12 md:mb-16"
        >
          <h1
            class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl/none"
          >
            Resources
          </h1>
          <p
            class="max-w-[700px] text-muted-foreground text-base sm:text-lg md:text-xl"
          >
            Access our collection of helpful resources and documents to enhance
            your cook-off experience.
          </p>
        </div>

        <ResourcesGrid />
      </div>
    </section>
  </main>
</Layout>
