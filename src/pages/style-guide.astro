---
import Layout from '../layouts/Layout.astro';
import { Button } from '@/components/ui/button';
import {
  Card,
  CardHeader,
  CardTitle,
  CardDescription,
  CardContent,
  CardFooter,
} from '@/components/ui/card';
import { Input } from '@/components/ui/input';

// Example of custom SEO configuration for the style guide
const customSEO = {
  title: 'Style Guide',
  description:
    'A comprehensive guide to the design system and components used in the Original Terlingua International Championship Chili Cook-off website.',
  // Example of how to override the default image
  image: '/style-guide-preview.png',
  noindex: true, // We don't want search engines to index this test page
};
---

<Layout {...customSEO}>
  <main class="container mx-auto p-4">
    <h1 class="text-4xl font-extrabold tracking-tight lg:text-5xl mb-8">
      Style Guide
    </h1>

    <!-- Rest of the style guide content -->
    <div class="space-y-12">
      <!-- Typography Section -->
      <div class="space-y-6">
        <h2 class="text-2xl font-semibold">Typography System</h2>

        <!-- Headings -->
        <div class="space-y-4">
          <h3 class="text-lg font-medium">Headings</h3>
          <div class="space-y-6">
            <h1
              class="scroll-m-20 text-4xl font-extrabold tracking-tight lg:text-5xl"
            >
              Heading 1 - The Quick Brown Fox
            </h1>
            <h2
              class="scroll-m-20 border-b pb-2 text-3xl font-semibold tracking-tight first:mt-0"
            >
              Heading 2 - The Quick Brown Fox
            </h2>
            <h3 class="scroll-m-20 text-2xl font-semibold tracking-tight">
              Heading 3 - The Quick Brown Fox
            </h3>
            <h4 class="scroll-m-20 text-xl font-semibold tracking-tight">
              Heading 4 - The Quick Brown Fox
            </h4>
          </div>
        </div>

        <!-- Paragraph Styles -->
        <div class="space-y-4">
          <h3 class="text-lg font-medium">Paragraph Styles</h3>
          <div class="space-y-6">
            <p class="leading-7 [&:not(:first-child)]:mt-6">
              Default paragraph - The quick brown fox jumps over the lazy dog.
              This is a standard paragraph demonstrating the default text style
              used throughout the application.
            </p>
            <p class="text-xl text-muted-foreground">
              Lead paragraph - The quick brown fox jumps over the lazy dog. This
              larger text is used for introductory paragraphs.
            </p>
            <p class="text-sm text-muted-foreground">
              Small text - The quick brown fox jumps over the lazy dog. This
              smaller text is used for supporting information.
            </p>
          </div>
        </div>

        <!-- Blockquote -->
        <div class="space-y-4">
          <h3 class="text-lg font-medium">Blockquote</h3>
          <blockquote class="mt-6 border-l-2 pl-6 italic">
            "The quick brown fox jumps over the lazy dog" - A wise fox
          </blockquote>
        </div>

        <!-- List Styles -->
        <div class="space-y-4">
          <h3 class="text-lg font-medium">List Styles</h3>
          <ul class="my-6 ml-6 list-disc [&>li]:mt-2">
            <li>First item in an unordered list</li>
            <li>Second item in an unordered list</li>
            <li>Third item in an unordered list</li>
          </ul>
          <ol class="my-6 ml-6 list-decimal [&>li]:mt-2">
            <li>First item in an ordered list</li>
            <li>Second item in an ordered list</li>
            <li>Third item in an ordered list</li>
          </ol>
        </div>

        <!-- Inline Styles -->
        <div class="space-y-4">
          <h3 class="text-lg font-medium">Inline Styles</h3>
          <div class="space-y-2">
            <p><strong>Bold text</strong> - The quick brown fox</p>
            <p><em>Italic text</em> - The quick brown fox</p>
            <p>
              <code
                class="relative rounded bg-muted px-[0.3rem] py-[0.2rem] font-mono text-sm font-semibold"
                >Inline code</code
              > - The quick brown fox
            </p>
            <p>
              <a
                href="#"
                class="font-medium text-primary underline underline-offset-4"
                >Link style</a
              > - The quick brown fox
            </p>
          </div>
        </div>
      </div>

      <!-- Original Components -->
      <div class="space-y-8">
        <!-- Button Component -->
        <div class="space-y-4">
          <h2 class="text-xl font-semibold">Button Component</h2>
          <div class="flex gap-4">
            <Button>Default Button</Button>
            <Button variant="secondary">Secondary Button</Button>
            <Button variant="destructive">Destructive Button</Button>
          </div>
        </div>

        <!-- Card Component -->
        <div class="space-y-4">
          <h2 class="text-xl font-semibold">Card Component</h2>
          <Card>
            <CardHeader>
              <CardTitle>Card Title</CardTitle>
              <CardDescription>Card Description goes here</CardDescription>
            </CardHeader>
            <CardContent>
              <p>This is the main content of the card.</p>
            </CardContent>
            <CardFooter>
              <p>Card Footer</p>
            </CardFooter>
          </Card>
        </div>

        <!-- Input Component -->
        <div class="space-y-4">
          <h2 class="text-xl font-semibold">Input Component</h2>
          <div class="flex flex-col gap-4 max-w-sm">
            <Input type="text" placeholder="Default input" />
            <Input type="email" placeholder="Email input" />
            <Input type="password" placeholder="Password input" />
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
