---
import Layout from "../layouts/Layout.astro";
import { Button } from "@/components/ui/button";
import {
  Card,
  CardHeader,
  CardTitle,
  CardDescription,
  CardContent,
  CardFooter,
} from "@/components/ui/card";
import { Input } from "@/components/ui/input";
---

<Layout title="Components Test">
  <main class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">ShadcN Components Test Page</h1>
    <div class="space-y-8">
      <!-- Button Component -->
      <div class="space-y-4">
        <h2 class="text-xl font-semibold">Button Component</h2>
        <div class="flex gap-4">
          <Button>Default Button</Button>
          <Button variant="secondary">Secondary Button</Button>
          <Button variant="destructive">Destructive Button</Button>
        </div>
      </div>

      <!-- Card Component -->
      <div class="space-y-4">
        <h2 class="text-xl font-semibold">Card Component</h2>
        <Card>
          <CardHeader>
            <CardTitle>Card Title</CardTitle>
            <CardDescription>Card Description goes here</CardDescription>
          </CardHeader>
          <CardContent>
            <p>This is the main content of the card.</p>
          </CardContent>
          <CardFooter>
            <p>Card Footer</p>
          </CardFooter>
        </Card>
      </div>

      <!-- Input Component -->
      <div class="space-y-4">
        <h2 class="text-xl font-semibold">Input Component</h2>
        <div class="flex flex-col gap-4 max-w-sm">
          <Input type="text" placeholder="Default input" />
          <Input type="email" placeholder="Email input" />
          <Input type="password" placeholder="Password input" />
        </div>
      </div>
    </div>
  </main>
</Layout>

